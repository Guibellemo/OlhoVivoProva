<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#f5f5f5">

    <!-- Título do App -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Consulta SPTrans - Olho Vivo"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#1976D2"
        android:gravity="center"
        android:layout_marginBottom="24dp" />

    <!-- Card de Pesquisa -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:elevation="4dp"
        android:radius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Buscar Linha"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#333"
                android:layout_marginBottom="16dp" />

            <!-- Campo de busca da linha -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:hint="Número ou nome da linha">

                <EditText
                    android:id="@+id/editTextLinha"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:padding="12dp" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Campo do sentido -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:hint="Sentido (1 ou 2)">

                <EditText
                    android:id="@+id/editTextSentido"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:padding="12dp" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Botão de busca -->
            <Button
                android:id="@+id/buttonBuscar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BUSCAR LINHA"
                android:textColor="@android:color/white"
                android:background="#1976D2"
                android:padding="12dp"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Legenda dos Sentidos -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:elevation="2dp"
        android:radius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp"
            android:background="#E3F2FD">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Legenda dos Sentidos:"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#1565C0"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1 = Terminal Principal → Terminal Secundário"
                android:textSize="12sp"
                android:textColor="#1565C0" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2 = Terminal Secundário → Terminal Principal"
                android:textSize="12sp"
                android:textColor="#1565C0" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Card de Resultados -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        android:radius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Resultados"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#333"
                android:layout_marginBottom="16dp" />

            <!-- Número da linha -->
            <TextView
                android:id="@+id/textViewNumeroLinha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#1976D2"
                android:layout_marginBottom="12dp"
                android:visibility="gone"
                android:background="#E3F2FD"
                android:padding="8dp"
                android:drawableLeft="@android:drawable/ic_menu_directions"
                android:drawablePadding="8dp" />

            <!-- Sentido Principal para Secundário -->
            <TextView
                android:id="@+id/textViewSentidoPrincipal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="14sp"
                android:textColor="#333"
                android:layout_marginBottom="8dp"
                android:visibility="gone"
                android:background="#F5F5F5"
                android:padding="8dp" />

            <!-- Sentido Secundário para Principal -->
            <TextView
                android:id="@+id/textViewSentidoSecundario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="14sp"
                android:textColor="#333"
                android:visibility="gone"
                android:background="#F5F5F5"
                android:padding="8dp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>